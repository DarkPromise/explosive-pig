{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    /** Paths */
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"]
    },
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist","../shared/types/types.d.ts"]
}