{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDirs": ["."],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~/shared/*": ["../shared/*"]
    }
  },
  "include": [
    "**/*",
  ]
}
