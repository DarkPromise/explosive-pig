{
  "compilerOptions": {
    "outDir": "dist",
    "rootDirs": ["."],
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    /** Paths */
    "baseUrl": ".",
    "paths": {
      "~/shared/*": ["../shared/*"]
    },
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}